---
import BaseLayout from "../layouts/BaseLayout.astro";
import content from "../data/content.json";

const title = "PT Dharma Putra Maritime - Global Excellence in Maritime Services";
const description = "Penyedia jasa manajemen kapal, crewing, dan agency pelabuhan terkemuka di Indonesia. Integritas, Keselamatan, dan Profesionalisme.";

const { navigation, hero, stats, about, services, cta_banner, contact, footer } = content;
---

<BaseLayout {title} {description}>
  <!-- Language Overlay (for Flash Prevention) -->
  <style is:inline>
    [data-lang="en"] .lang-id, [data-lang="id"] .lang-en { display: none !important; }

    /* Navbar Scroll Fix Styles */
    #navbar[data-scrolled="true"] .nav-link { color: #475569; } /* slate-600 */
    #navbar[data-scrolled="true"] .nav-link:hover { color: #0a192f; } /* brand-900 */
    #navbar[data-scrolled="true"] .brand-text { color: #0a192f; }

    #navbar[data-scrolled="false"] .nav-link { color: rgba(255, 255, 255, 0.8); }
    #navbar[data-scrolled="false"] .nav-link:hover { color: #c5a059; } /* brand-gold */
    #navbar[data-scrolled="false"] .brand-text { color: #ffffff; }
  </style>

  <!-- Navigation -->
  <nav
    id="navbar"
    class="fixed w-full z-50 transition-all duration-500 h-24 flex items-center bg-transparent"
    data-scrolled="false"
  >
    <div class="max-w-7xl mx-auto px-6 lg:px-8 w-full">
      <div class="flex justify-between items-center">
        <!-- Logo -->
        <a href="#home" class="flex items-center gap-4 group">
          <div class="relative w-12 h-12 flex items-center justify-center">
             <div class="absolute inset-0 bg-brand-gold rounded-xl rotate-45 group-hover:rotate-90 transition-transform duration-500 opacity-20"></div>
             <i class="fa-solid fa-anchor text-2xl text-brand-gold z-10"></i>
          </div>
          <div class="flex flex-col">
            <span class="brand-text text-xl font-serif font-black tracking-tight transition-colors duration-300">DHARMA PUTRA</span>
            <span class="text-[10px] uppercase tracking-[0.4em] font-bold text-brand-gold">Maritime</span>
          </div>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden lg:flex items-center gap-10">
          <div class="flex items-center gap-8 mr-4 border-r border-white/10 pr-8 group-data-[scrolled=true]:border-slate-200">
            <a href="#home" class="nav-link text-sm font-bold uppercase tracking-widest transition-all relative group py-2">
              <span class="lang-id">{navigation.home.id}</span><span class="lang-en">{navigation.home.en}</span>
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-full"></span>
            </a>
            <a href="#about" class="nav-link text-sm font-bold uppercase tracking-widest transition-all relative group py-2">
              <span class="lang-id">{navigation.about.id}</span><span class="lang-en">{navigation.about.en}</span>
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-full"></span>
            </a>
            <a href="#services" class="nav-link text-sm font-bold uppercase tracking-widest transition-all relative group py-2">
              <span class="lang-id">{navigation.services.id}</span><span class="lang-en">{navigation.services.en}</span>
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-full"></span>
            </a>
          </div>

          <!-- Language Switcher -->
          <div class="flex items-center gap-2 bg-white/5 backdrop-blur-md p-1 rounded-lg border border-white/10 group-data-[scrolled=true]:bg-slate-100 group-data-[scrolled=true]:border-slate-200">
            <button onclick="setLanguage('id')" id="btn-id" class="px-3 py-1.5 text-[10px] font-black uppercase tracking-tighter rounded transition-all">ID</button>
            <button onclick="setLanguage('en')" id="btn-en" class="px-3 py-1.5 text-[10px] font-black uppercase tracking-tighter rounded transition-all">EN</button>
          </div>

          <a
            href="#contact"
            class="bg-brand-gold hover:bg-brand-900 hover:text-white text-brand-900 px-8 py-3 rounded-full text-sm font-black uppercase tracking-widest transition-all hover:scale-105 active:scale-95 shadow-gold-glow"
          >
            <span class="lang-id">{navigation.contact.id}</span><span class="lang-en">{navigation.contact.en}</span>
          </a>
        </div>

        <!-- Mobile Toggle -->
        <div class="flex items-center gap-4 lg:hidden">
            <button id="mobile-lang-toggle" class="text-xs font-black text-white group-data-[scrolled=true]:text-brand-900 border border-current px-2 py-1 rounded">
                <span class="lang-id">EN</span><span class="lang-en">ID</span>
            </button>
            <button id="mobile-menu-btn" class="text-white group-data-[scrolled=true]:text-brand-900 p-2">
              <div class="w-8 h-0.5 bg-current mb-2"></div>
              <div class="w-8 h-0.5 bg-current mb-2"></div>
              <div class="w-5 h-0.5 bg-current ml-auto"></div>
            </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section id="home" class="relative min-h-screen flex items-center overflow-hidden bg-brand-900">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-r from-brand-950 via-brand-900/80 to-transparent z-10"></div>
      <img
        src="https://images.unsplash.com/photo-1559297434-fae8a1916a79?auto=format&fit=crop&w=1920&q=80"
        alt="Maritime Vessel"
        class="w-full h-full object-cover animate-ken-burns opacity-60"
        onerror="this.src='https://images.unsplash.com/photo-1494412574743-01927215e8b9?auto=format&fit=crop&w=1920&q=80'"
      />
    </div>

    <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-brand-gold/10 blur-[120px] rounded-full animate-pulse"></div>

    <div class="relative z-20 max-w-7xl mx-auto px-6 lg:px-8 pt-20">
      <div class="max-w-3xl">
        <div data-aos="fade-right" class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-white/5 border border-white/10 backdrop-blur-md mb-8">
          <span class="flex h-2 w-2 rounded-full bg-brand-gold animate-ping"></span>
          <span class="text-xs font-bold uppercase tracking-[0.2em] text-brand-gold">
            <span class="lang-id">{hero.badge.id}</span>
            <span class="lang-en">{hero.badge.en}</span>
          </span>
        </div>

        <h1 data-aos="fade-up" data-aos-delay="200" class="text-5xl lg:text-7xl font-serif font-bold text-white leading-[1.1] mb-8">
          <span class="lang-id">{hero.title_main.id} <span class="text-gradient-gold">{hero.title_accent.id}</span></span>
          <span class="lang-en">{hero.title_main.en} <span class="text-gradient-gold">{hero.title_accent.en}</span></span>
        </h1>

        <p data-aos="fade-up" data-aos-delay="400" class="text-xl text-slate-300 leading-relaxed mb-10 max-w-2xl">
          <span class="lang-id">{hero.description.id}</span>
          <span class="lang-en">{hero.description.en}</span>
        </p>

        <div data-aos="fade-up" data-aos-delay="600" class="flex flex-wrap gap-6">
          <a href="#services" class="group relative px-10 py-5 bg-brand-gold text-brand-900 font-black uppercase tracking-widest rounded-xl overflow-hidden shadow-2xl">
            <span class="relative z-10 lang-id">{hero.cta_primary.id}</span>
            <span class="relative z-10 lang-en">{hero.cta_primary.en}</span>
            <div class="absolute inset-0 bg-white translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
          </a>
          <a href="#about" class="px-10 py-5 border border-white/20 hover:border-brand-gold text-white font-black uppercase tracking-widest rounded-xl backdrop-blur-sm transition-all flex items-center gap-3">
            <span class="lang-id">{hero.cta_secondary.id}</span><span class="lang-en">{hero.cta_secondary.en}</span>
            <i class="fa-solid fa-arrow-right-long group-hover:translate-x-2 transition-transform"></i>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="relative z-30 -mt-16 py-12 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="glass-morphism rounded-3xl p-8 lg:p-12 shadow-premium grid grid-cols-2 lg:grid-cols-4 gap-8">
        {stats.map((stat, idx) => (
          <div class="text-center lg:border-r last:border-0 border-slate-200" data-aos="fade-up" data-aos-delay={idx * 100}>
            <div class="flex items-center justify-center gap-3 mb-2 text-brand-gold">
              <i class={`fa-solid ${stat.icon} text-xl`}></i>
            </div>
            <div class="text-4xl font-serif font-bold text-brand-900 mb-1">
              <span class="counter" data-target={stat.value}>0</span>{stat.suffix}
            </div>
            <p class="text-xs uppercase tracking-widest font-bold text-slate-500">
                <span class="lang-id">{stat.label_id}</span>
                <span class="lang-en">{stat.label_en}</span>
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-24 lg:py-32 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-20 items-center">
        <div class="relative" data-aos="fade-right">
          <div class="absolute -top-10 -left-10 w-40 h-40 bg-brand-gold/10 rounded-full blur-3xl"></div>
          <div class="relative rounded-3xl overflow-hidden shadow-premium">
            <img
              src="https://images.unsplash.com/photo-1516937941344-00b4e0337589?auto=format&fit=crop&w=1200&q=80"
              alt="Professional Team"
              class="w-full aspect-[4/5] object-cover hover:scale-105 transition-transform duration-700"
              onerror="this.src='https://images.unsplash.com/photo-1521791136064-7986c2923216?auto=format&fit=crop&w=1200&q=80'"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-brand-900/80 to-transparent"></div>
            <div class="absolute bottom-10 left-10 right-10 p-8 glass-morphism rounded-2xl border-white/20">
               <p class="text-brand-900 font-serif italic text-lg leading-relaxed">
                 <span class="lang-id">{about.quote.id}</span>
                 <span class="lang-en">{about.quote.en}</span>
               </p>
               <div class="mt-4 flex items-center gap-4">
                 <div class="w-10 h-0.5 bg-brand-gold"></div>
                 <span class="text-xs uppercase tracking-widest font-black text-brand-900">
                    <span class="lang-id">{about.vision_badge.id}</span>
                    <span class="lang-en">{about.vision_badge.en}</span>
                 </span>
               </div>
            </div>
          </div>
        </div>

        <div data-aos="fade-left">
          <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-xs mb-6 block lang-id">{about.badge.id}</span>
          <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-xs mb-6 block lang-en">{about.badge.en}</span>

          <h2 class="text-4xl lg:text-5xl font-serif font-bold text-brand-900 leading-tight mb-8">
            <span class="lang-id">{about.title_main.id} <span class="text-gradient-gold">{about.title_accent.id}</span></span>
            <span class="lang-en">{about.title_main.en} <span class="text-gradient-gold">{about.title_accent.en}</span></span>
          </h2>
          <div class="space-y-6 text-lg text-slate-600 leading-relaxed">
            <p class="lang-id">{about.description_1.id}</p>
            <p class="lang-en">{about.description_1.en}</p>
            <p class="lang-id">{about.description_2.id}</p>
            <p class="lang-en">{about.description_2.en}</p>
          </div>

          <div class="mt-12 grid sm:grid-cols-2 gap-8">
            {about.features.map(feature => (
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-slate-50 rounded-xl flex items-center justify-center text-brand-gold">
                  <i class={`fa-solid ${feature.icon} text-xl`}></i>
                </div>
                <div>
                  <h4 class="font-bold text-brand-900 mb-1 lang-id">{feature.title_id}</h4>
                  <h4 class="font-bold text-brand-900 mb-1 lang-en">{feature.title_en}</h4>
                  <p class="text-sm text-slate-500 lang-id">{feature.desc_id}</p>
                  <p class="text-sm text-slate-500 lang-en">{feature.desc_en}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-24 lg:py-32 bg-slate-50 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-1/3 h-full bg-brand-gold/5 -skew-x-12 translate-x-1/2"></div>

    <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
      <div class="text-center max-w-3xl mx-auto mb-20">
        <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-xs mb-6 block lang-id">{services.badge.id}</span>
        <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-xs mb-6 block lang-en">{services.badge.en}</span>
        <h2 class="text-4xl lg:text-5xl font-serif font-bold text-brand-900 leading-tight">
          <span class="lang-id">{services.title_main.id} <span class="text-gradient-gold">{services.title_accent.id}</span></span>
          <span class="lang-en">{services.title_main.en} <span class="text-gradient-gold">{services.title_accent.en}</span></span>
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {services.items.map((service, idx) => (
          <div
            class="group bg-white rounded-3xl overflow-hidden border border-slate-100 shadow-sm hover:shadow-premium transition-all duration-500 hover:-translate-y-2"
            data-aos="fade-up"
            data-aos-delay={idx * 150}
          >
            <div class="relative h-64 overflow-hidden">
              <img src={service.image} alt={service.title_en} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" onerror="this.src='https://images.unsplash.com/photo-1559297434-fae8a1916a79?auto=format&fit=crop&w=1200&q=80'" />
              <div class="absolute inset-0 bg-brand-900/20 group-hover:bg-brand-900/40 transition-colors"></div>
              <div class="absolute top-6 left-6 w-14 h-14 bg-white rounded-2xl flex items-center justify-center text-brand-gold shadow-xl">
                <i class={`fa-solid ${service.icon} text-2xl`}></i>
              </div>
            </div>
            <div class="p-8">
              <h3 class="text-2xl font-serif font-bold text-brand-900 mb-4 group-hover:text-brand-gold transition-colors">
                  <span class="lang-id">{service.title_id}</span>
                  <span class="lang-en">{service.title_en}</span>
              </h3>
              <p class="text-slate-500 leading-relaxed mb-8">
                <span class="lang-id">{service.desc_id}</span>
                <span class="lang-en">{service.desc_en}</span>
              </p>
              <a href="#contact" class="inline-flex items-center gap-3 font-black uppercase tracking-widest text-xs text-brand-900 group/link">
                <span class="lang-id">{services.cta.id}</span><span class="lang-en">{services.cta.en}</span>
                <span class="w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center group-hover/link:bg-brand-gold group-hover/link:text-white transition-all">
                  <i class="fa-solid fa-arrow-right"></i>
                </span>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner -->
  <section class="py-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="relative rounded-[3rem] overflow-hidden bg-brand-900 p-12 lg:p-24 text-center">
        <div class="absolute inset-0 z-0">
          <img
            src="https://images.unsplash.com/photo-1516321497487-e288fb19713f?auto=format&fit=crop&w=1920&q=80"
            class="w-full h-full object-cover opacity-20"
            alt="CTA BG"
          />
          <div class="absolute inset-0 bg-gradient-to-b from-brand-900/80 via-brand-900 to-brand-900/80"></div>
        </div>

        <div class="relative z-10 max-w-4xl mx-auto" data-aos="zoom-in">
          <h2 class="text-4xl lg:text-6xl font-serif font-bold text-white mb-8">
            <span class="lang-id">{cta_banner.title_main.id} <span class="text-gradient-gold">{cta_banner.title_accent.id}</span></span>
            <span class="lang-en">{cta_banner.title_main.en} <span class="text-gradient-gold">{cta_banner.title_accent.en}</span></span>
          </h2>
          <p class="text-xl text-slate-300 mb-12 leading-relaxed">
            <span class="lang-id">{cta_banner.description.id}</span>
            <span class="lang-en">{cta_banner.description.en}</span>
          </p>
          <div class="flex flex-wrap justify-center gap-6">
            <a href="#contact" class="px-12 py-6 bg-brand-gold text-brand-900 font-black uppercase tracking-[0.2em] rounded-2xl shadow-2xl hover:bg-white transition-all hover:scale-105 active:scale-95">
              <span class="lang-id">{cta_banner.btn_primary.id}</span>
              <span class="lang-en">{cta_banner.btn_primary.en}</span>
            </a>
            <a href={`tel:${contact.info.phone.replace(/[^0-9]/g, '')}`} class="px-12 py-6 border border-white/20 text-white font-black uppercase tracking-[0.2em] rounded-2xl hover:bg-white/10 transition-all">
              <i class="fa-solid fa-phone mr-3 text-brand-gold"></i> <span class="lang-id">{cta_banner.btn_secondary.id}</span><span class="lang-en">{cta_banner.btn_secondary.en}</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact & Location -->
  <section id="contact" class="py-24 bg-white relative">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-20">
        <div data-aos="fade-right">
          <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-xs mb-6 block lang-id">{contact.badge.id}</span>
          <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-xs mb-6 block lang-en">{contact.badge.en}</span>
          <h2 class="text-4xl lg:text-5xl font-serif font-bold text-brand-900 leading-tight mb-8">
            <span class="lang-id">{contact.title_main.id} <span class="text-gradient-gold">{contact.title_accent.id}</span></span>
            <span class="lang-en">{contact.title_main.en} <span class="text-gradient-gold">{contact.title_accent.en}</span></span>
          </h2>

          <div class="space-y-10 mt-12">
            <div class="flex gap-6 group">
              <div class="w-14 h-14 rounded-2xl bg-brand-50 flex items-center justify-center text-brand-gold group-hover:bg-brand-gold group-hover:text-white transition-all duration-500 shadow-sm">
                <i class="fa-solid fa-location-dot text-xl"></i>
              </div>
              <div>
                <h4 class="text-xs uppercase tracking-widest font-black text-slate-400 mb-2 lang-id">{contact.info.address_label.id}</h4>
                <h4 class="text-xs uppercase tracking-widest font-black text-slate-400 mb-2 lang-en">{contact.info.address_label.en}</h4>
                <p class="text-lg font-bold text-brand-900">{contact.info.address}</p>
              </div>
            </div>

            <div class="flex gap-6 group">
              <div class="w-14 h-14 rounded-2xl bg-brand-50 flex items-center justify-center text-brand-gold group-hover:bg-brand-gold group-hover:text-white transition-all duration-500 shadow-sm">
                <i class="fa-solid fa-envelope-open-text text-xl"></i>
              </div>
              <div>
                <h4 class="text-xs uppercase tracking-widest font-black text-slate-400 mb-2 lang-id">{contact.info.email_label.id}</h4>
                <h4 class="text-xs uppercase tracking-widest font-black text-slate-400 mb-2 lang-en">{contact.info.email_label.en}</h4>
                <p class="text-lg font-bold text-brand-900">{contact.info.email}</p>
              </div>
            </div>

            <div class="flex gap-6 group">
              <div class="w-14 h-14 rounded-2xl bg-brand-50 flex items-center justify-center text-brand-gold group-hover:bg-brand-gold group-hover:text-white transition-all duration-500 shadow-sm">
                <i class="fa-solid fa-phone-volume text-xl"></i>
              </div>
              <div>
                <h4 class="text-xs uppercase tracking-widest font-black text-slate-400 mb-2 lang-id">{contact.info.phone_label.id}</h4>
                <h4 class="text-xs uppercase tracking-widest font-black text-slate-400 mb-2 lang-en">{contact.info.phone_label.en}</h4>
                <p class="text-lg font-bold text-brand-900">{contact.info.phone}</p>
              </div>
            </div>
          </div>
        </div>

        <div class="relative" data-aos="fade-left">
          <div class="absolute -inset-4 bg-slate-50 rounded-[2.5rem] -rotate-1"></div>
          <form id="contactForm" class="relative glass-morphism p-10 lg:p-12 rounded-[2rem] shadow-premium border-white">
            <div class="grid sm:grid-cols-2 gap-6 mb-6">
              <div>
                <label class="block text-[10px] uppercase tracking-widest font-black text-slate-500 mb-2 lang-id">{contact.form.name_label.id}</label>
                <label class="block text-[10px] uppercase tracking-widest font-black text-slate-500 mb-2 lang-en">{contact.form.name_label.en}</label>
                <input type="text" required class="w-full bg-slate-50 border-0 rounded-xl px-5 py-4 focus:ring-2 focus:ring-brand-gold transition-all text-brand-900 placeholder:text-slate-300" placeholder="John Doe" />
              </div>
              <div>
                <label class="block text-[10px] uppercase tracking-widest font-black text-slate-500 mb-2 lang-id">{contact.form.email_label.id}</label>
                <label class="block text-[10px] uppercase tracking-widest font-black text-slate-500 mb-2 lang-en">{contact.form.email_label.en}</label>
                <input type="email" required class="w-full bg-slate-50 border-0 rounded-xl px-5 py-4 focus:ring-2 focus:ring-brand-gold transition-all text-brand-900 placeholder:text-slate-300" placeholder="john@company.com" />
              </div>
            </div>
            <div class="mb-6">
              <label class="block text-[10px] uppercase tracking-widest font-black text-slate-500 mb-2 lang-id">{contact.form.interest_label.id}</label>
              <label class="block text-[10px] uppercase tracking-widest font-black text-slate-500 mb-2 lang-en">{contact.form.interest_label.en}</label>
              <select class="w-full bg-slate-50 border-0 rounded-xl px-5 py-4 focus:ring-2 focus:ring-brand-gold transition-all text-brand-900 appearance-none">
                {services.items.map(s => (
                    <option value={s.title_en}>{s.title_id} / {s.title_en}</option>
                ))}
                <option>Others</option>
              </select>
            </div>
            <div class="mb-8">
              <label class="block text-[10px] uppercase tracking-widest font-black text-slate-500 mb-2 lang-id">{contact.form.message_label.id}</label>
              <label class="block text-[10px] uppercase tracking-widest font-black text-slate-500 mb-2 lang-en">{contact.form.message_label.en}</label>
