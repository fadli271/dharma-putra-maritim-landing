---
import BaseLayout from "../layouts/BaseLayout.astro";
import content from "../data/content.json";

const title = "PT Dharma Putra Maritime - Global Excellence in Maritime Services";
const description = "Penyedia jasa manajemen kapal, crewing, dan agency pelabuhan terkemuka di Indonesia. Integritas, Keselamatan, dan Profesionalisme.";

const { navigation, hero, stats, about, services, cta_banner, contact, footer } = content;

// Helper to resolve asset paths correctly
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
const getAssetPath = (path: string) => {
  const cleanPath = path.startsWith("/") ? path : `/${path}`;
  return `${base}${cleanPath}`;
};
---

<BaseLayout {title} {description}>
  <!-- Language Overlay (for Flash Prevention) -->
  <style is:inline>
    [data-lang="en"] .lang-id, [data-lang="id"] .lang-en { display: none !important; }

    /* Navbar Scroll Fix Styles */
    #navbar[data-scrolled="true"] {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        height: 70px;
    }
    #navbar[data-scrolled="true"] .nav-link { color: #475569; }
    #navbar[data-scrolled="true"] .nav-link:hover { color: #0a192f; }
    #navbar[data-scrolled="true"] .brand-text { color: #0a192f; }

    #navbar[data-scrolled="false"] {
        background: transparent;
        height: 80px;
    }
    #navbar[data-scrolled="false"] .nav-link { color: rgba(255, 255, 255, 0.9); }
    #navbar[data-scrolled="false"] .nav-link:hover { color: #c5a059; }
    #navbar[data-scrolled="false"] .brand-text { color: #ffffff; }

    @media (max-width: 1023px) {
        #navbar {
            height: 64px !important;
            background: #0a192f !important;
            backdrop-filter: blur(12px);
        }
        #navbar .brand-text { color: #ffffff !important; }
    }

    .shadow-premium {
      box-shadow: 0 25px 50px -12px rgba(10, 25, 47, 0.1);
    }

    .shadow-gold-glow {
      box-shadow: 0 10px 25px -5px rgba(197, 160, 89, 0.3);
    }
  </style>

  <!-- Navigation -->
  <nav
    id="navbar"
    class="fixed w-full z-50 transition-all duration-500 flex items-center"
    data-scrolled="false"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <div class="flex justify-between items-center gap-2">
        <!-- Logo -->
        <a href="#home" class="flex items-center gap-2 sm:gap-3 group shrink-0">
          <div class="relative w-8 h-8 sm:w-10 sm:h-10 flex items-center justify-center">
             <div class="absolute inset-0 bg-brand-gold rounded-lg rotate-45 group-hover:rotate-90 transition-transform duration-500 opacity-20"></div>
             <i class="fa-solid fa-anchor text-base sm:text-lg text-brand-gold z-10"></i>
          </div>
          <div class="flex flex-col">
            <span class="brand-text text-sm sm:text-lg font-serif font-black tracking-tight transition-colors duration-300 leading-none mb-1 uppercase">Dharma Putra</span>
            <span class="text-[7px] sm:text-[9px] uppercase tracking-[0.3em] font-bold text-brand-gold">Maritime</span>
          </div>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden lg:flex items-center gap-6">
          <div class="flex items-center gap-6 mr-4 border-r border-white/10 pr-6">
            <a href="#home" class="nav-link text-[10px] font-bold uppercase tracking-widest transition-all relative group py-2">
              <span class="lang-id">{navigation.home.id}</span><span class="lang-en">{navigation.home.en}</span>
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-full"></span>
            </a>
            <a href="#about" class="nav-link text-[10px] font-bold uppercase tracking-widest transition-all relative group py-2">
              <span class="lang-id">{navigation.about.id}</span><span class="lang-en">{navigation.about.en}</span>
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-full"></span>
            </a>
            <a href="#services" class="nav-link text-[10px] font-bold uppercase tracking-widest transition-all relative group py-2">
              <span class="lang-id">{navigation.services.id}</span><span class="lang-en">{navigation.services.en}</span>
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-gold transition-all duration-300 group-hover:w-full"></span>
            </a>
          </div>

          <!-- Language Switcher -->
          <div class="flex items-center gap-1 bg-white/5 backdrop-blur-md p-1 rounded-lg border border-white/10">
            <button onclick="setLanguage('id')" id="btn-id" class="px-2 py-1 text-[8px] font-black uppercase rounded transition-all">ID</button>
            <button onclick="setLanguage('en')" id="btn-en" class="px-2 py-1 text-[8px] font-black uppercase rounded transition-all">EN</button>
          </div>

          <a
            href="#contact"
            class="bg-brand-gold hover:bg-brand-900 hover:text-white text-brand-900 px-5 py-2.5 rounded-full text-[9px] font-black uppercase tracking-widest transition-all shadow-gold-glow"
          >
            <span class="lang-id">{navigation.contact.id}</span><span class="lang-en">{navigation.contact.en}</span>
          </a>
        </div>

        <!-- Mobile Toggle -->
        <div class="flex lg:hidden items-center gap-3">
            <button id="mobile-lang-toggle" class="text-[8px] font-black text-white border border-white/30 px-2 py-1 rounded uppercase">
                <span class="lang-id">EN</span><span class="lang-en">ID</span>
            </button>
            <button id="mobile-menu-btn" class="text-white p-1">
              <div class="w-6 h-0.5 bg-current mb-1.5 transition-all"></div>
              <div class="w-6 h-0.5 bg-current mb-1.5 transition-all"></div>
              <div class="w-4 h-0.5 bg-current ml-auto transition-all"></div>
            </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="fixed inset-0 z-[100] bg-brand-900/98 backdrop-blur-xl transition-all duration-500 translate-x-full lg:hidden invisible opacity-0"
  >
    <div class="flex flex-col h-full p-8">
      <div class="flex justify-between items-center mb-10">
        <div class="flex items-center gap-3">
            <i class="fa-solid fa-anchor text-xl text-brand-gold"></i>
            <span class="text-white font-serif font-black tracking-tight text-lg uppercase">Dharma Putra</span>
        </div>
        <button id="close-menu-btn" class="text-white/50 hover:text-brand-gold p-2">
            <i class="fa-solid fa-xmark text-2xl"></i>
        </button>
      </div>

      <nav class="flex flex-col gap-5">
        {[
          { id: 'home', icon: 'fa-house' },
          { id: 'about', icon: 'fa-circle-info' },
          { id: 'services', icon: 'fa-ship' },
          { id: 'contact', icon: 'fa-envelope' }
        ].map((item) => (
          <a href={`#${item.id}`} class="mobile-nav-link flex items-center gap-4 group">
            <div class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center text-brand-gold group-hover:bg-brand-gold group-hover:text-brand-900 transition-all">
                <i class={`fa-solid ${item.icon} text-sm`}></i>
            </div>
            <span class="text-lg font-serif font-bold text-white group-hover:text-brand-gold transition-colors">
                <span class="lang-id">{navigation[item.id as keyof typeof navigation].id}</span>
                <span class="lang-en">{navigation[item.id as keyof typeof navigation].en}</span>
            </span>
          </a>
        ))}
      </nav>

      <div class="mt-auto pt-8 border-t border-white/10 text-center">
          <p class="text-[9px] uppercase tracking-[0.2em] text-white/30 font-bold mb-4">Select Language</p>
          <div class="flex items-center gap-3 mb-6">
              <button onclick="setLanguage('id')" class="flex-1 py-3 rounded-xl border border-white/10 text-white text-[9px] font-bold tracking-widest hover:bg-brand-gold hover:text-brand-900 transition-all">INDONESIA</button>
              <button onclick="setLanguage('en')" class="flex-1 py-3 rounded-xl border border-white/10 text-white text-[9px] font-bold tracking-widest hover:bg-brand-gold hover:text-brand-900 transition-all">ENGLISH</button>
          </div>
          <a href="#contact" id="mobile-contact-btn" class="w-full py-4 bg-brand-gold text-brand-900 text-center font-black uppercase tracking-widest text-[10px] rounded-xl block shadow-gold-glow">
              <span class="lang-id">{navigation.contact.id}</span>
              <span class="lang-en">{navigation.contact.en}</span>
          </a>
      </div>
    </div>
  </div>

  <!-- Hero Section -->
  <section id="home" class="relative min-h-screen flex items-center overflow-hidden bg-brand-900">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-r from-brand-950 via-brand-900/80 to-transparent z-10"></div>
      <img
        src="https://images.unsplash.com/photo-1559297434-fae8a1916a79?auto=format&fit=crop&w=1920&q=80"
        alt="Maritime Vessel"
        class="w-full h-full object-cover opacity-60"
      />
    </div>

    <div class="relative z-20 max-w-7xl mx-auto px-6 lg:px-8 pt-32 pb-20">
      <div class="max-w-3xl">
        <div data-aos="fade-right" class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-white/5 border border-white/10 backdrop-blur-md mb-6">
          <span class="flex h-2 w-2 rounded-full bg-brand-gold animate-ping"></span>
          <span class="text-[8px] sm:text-[10px] font-bold uppercase tracking-[0.2em] text-brand-gold">
            <span class="lang-id">{hero.badge.id}</span>
            <span class="lang-en">{hero.badge.en}</span>
          </span>
        </div>

        <h1 data-aos="fade-up" data-aos-delay="200" class="text-3xl sm:text-5xl lg:text-7xl font-serif font-bold text-white leading-[1.1] mb-6">
          <span class="lang-id">{hero.title_main.id} <span class="text-gradient-gold">{hero.title_accent.id}</span></span>
          <span class="lang-en">{hero.title_main.en} <span class="text-gradient-gold">{hero.title_accent.en}</span></span>
        </h1>

        <p data-aos="fade-up" data-aos-delay="400" class="text-sm sm:text-lg text-slate-300 leading-relaxed mb-10 max-w-2xl">
          <span class="lang-id">{hero.description.id}</span>
          <span class="lang-en">{hero.description.en}</span>
        </p>

        <div data-aos="fade-up" data-aos-delay="600" class="flex flex-col sm:flex-row gap-4 sm:gap-6">
          <a href="#services" class="group relative px-8 py-4 bg-brand-gold text-brand-900 text-center font-black uppercase tracking-widest text-[10px] sm:text-xs rounded-xl overflow-hidden shadow-2xl transition-all">
            <span class="relative z-10 lang-id">{hero.cta_primary.id}</span>
            <span class="relative z-10 lang-en">{hero.cta_primary.en}</span>
            <div class="absolute inset-0 bg-white translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
          </a>
          <a href="#about" class="px-8 py-4 border border-white/20 hover:border-brand-gold text-white font-black uppercase tracking-widest text-[10px] sm:text-xs rounded-xl backdrop-blur-sm transition-all flex items-center justify-center gap-3">
            <span class="lang-id">{hero.cta_secondary.id}</span><span class="lang-en">{hero.cta_secondary.en}</span>
            <i class="fa-solid fa-arrow-right-long group-hover:translate-x-2 transition-transform"></i>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="relative z-30 -mt-10 sm:-mt-16 py-8 px-4 sm:px-6">
    <div class="max-w-7xl mx-auto">
      <div class="glass-morphism rounded-[2rem] p-6 lg:p-12 shadow-premium bg-white/90 backdrop-blur-xl grid grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8 border border-white/20">
        {stats.map((stat) => (
          <div class="text-center lg:border-r last:border-0 border-slate-200" data-aos="fade-up">
            <div class="flex items-center justify-center gap-3 mb-2 text-brand-gold">
              <i class={`fa-solid ${stat.icon} text-lg`}></i>
            </div>
            <div class="text-xl sm:text-4xl font-serif font-bold text-brand-900 mb-1">
               {stat.value}{stat.suffix}
            </div>
            <p class="text-[8px] sm:text-[10px] uppercase font-black tracking-widest text-slate-400">
               <span class="lang-id">{stat.label_id}</span>
               <span class="lang-en">{stat.label_en}</span>
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 sm:py-32 bg-slate-50 relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <div class="relative order-2 lg:order-1" data-aos="fade-right">
          <div class="absolute -top-10 -left-10 w-40 h-40 bg-brand-gold/5 rounded-full blur-3xl"></div>
          <div class="relative z-10 rounded-[2rem] sm:rounded-[2.5rem] overflow-hidden shadow-premium aspect-[4/5] sm:aspect-square lg:aspect-[4/5]">
            <img
              src="https://images.unsplash.com/photo-1494412574743-01927215e8b9?auto=format&fit=crop&w=1200&q=80"
              alt="Ship Management"
              class="w-full h-full object-cover"
              onerror="this.src='https://images.unsplash.com/photo-1559297434-fae8a1916a79?auto=format&fit=crop&w=1200&q=80'"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-brand-900/60 to-transparent"></div>
          </div>
          <div class="absolute -bottom-6 -right-6 glass-morphism p-6 sm:p-8 rounded-2xl sm:rounded-3xl shadow-xl z-20 hidden sm:block">
            <div class="text-3xl sm:text-4xl font-serif font-bold text-brand-gold mb-1">15+</div>
            <div class="text-[8px] sm:text-[10px] uppercase font-black tracking-widest text-brand-900">Years Excellence</div>
          </div>
        </div>

        <div class="order-1 lg:order-2" data-aos="fade-left">
          <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-[10px] mb-4 block lang-id">{about.badge.id}</span>
          <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-[10px] mb-4 block lang-en">{about.badge.en}</span>
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-bold text-brand-900 leading-tight mb-6">
            <span class="lang-id">{about.title_main.id} <span class="text-gradient-gold">{about.title_accent.id}</span></span>
            <span class="lang-en">{about.title_main.en} <span class="text-gradient-gold">{about.title_accent.en}</span></span>
          </h2>
          <div class="space-y-4 text-base sm:text-lg text-slate-600 leading-relaxed mb-10">
            <p class="lang-id">{about.description_1.id}</p><p class="lang-en">{about.description_1.en}</p>
            <p class="lang-id">{about.description_2.id}</p><p class="lang-en">{about.description_2.en}</p>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
            {about.features.map(f => (
              <div class="flex items-center gap-3 group">
                <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-lg bg-brand-50 flex items-center justify-center text-brand-gold group-hover:bg-brand-gold group-hover:text-white transition-all">
                  <i class={`fa-solid ${f.icon} text-xs sm:text-sm`}></i>
                </div>
                <span class="font-bold text-brand-900 text-[11px] sm:text-sm tracking-tight uppercase">
                    <span class="lang-id">{f.title_id}</span><span class="lang-en">{f.title_en}</span>
                </span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-20 sm:py-32 bg-brand-900 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-1/2 h-full bg-brand-gold/5 skew-x-12 translate-x-1/2"></div>

    <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
      <div class="text-center max-w-3xl mx-auto mb-16 sm:mb-20">
        <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-[10px] mb-4 block lang-id">{services.badge.id}</span>
        <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-[10px] mb-4 block lang-en">{services.badge.en}</span>
        <h2 class="text-3xl sm:text-4xl lg:text-6xl font-serif font-bold text-white mb-6">
          <span class="lang-id">{services.title_main.id} <span class="text-gradient-gold">{services.title_accent.id}</span></span>
          <span class="lang-en">{services.title_main.en} <span class="text-gradient-gold">{services.title_accent.en}</span></span>
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8">
        {services.items.map((s, idx) => (
          <div data-aos="fade-up" data-aos-delay={idx * 150} class="group relative bg-white/5 border border-white/10 p-8 sm:p-10 rounded-[2rem] hover:bg-white transition-all duration-500 flex flex-col h-full">
            <div class="w-12 h-12 sm:w-16 sm:h-16 rounded-2xl bg-brand-gold flex items-center justify-center text-brand-900 mb-6 sm:mb-8 group-hover:scale-110 transition-transform">
              <i class={`fa-solid ${s.icon} text-xl sm:text-2xl`}></i>
            </div>
            <h3 class="text-xl sm:text-2xl font-serif font-bold text-white group-hover:text-brand-900 mb-4">
                <span class="lang-id">{s.title_id}</span><span class="lang-en">{s.title_en}</span>
            </h3>
            <p class="text-sm sm:text-base text-slate-400 group-hover:text-slate-600 leading-relaxed mb-8 flex-grow">
                <span class="lang-id">{s.desc_id}</span><span class="lang-en">{s.desc_en}</span>
            </p>
            <div class="mt-auto">
                <a href="#contact" class="inline-flex items-center gap-2 text-brand-gold font-bold text-[10px] uppercase tracking-widest group-hover:text-brand-900 transition-colors">
                    <span class="lang-id">{services.cta.id}</span><span class="lang-en">{services.cta.en}</span>
                    <i class="fa-solid fa-arrow-right"></i>
                </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Banner -->
  <section class="py-20 sm:py-32 relative overflow-hidden bg-brand-gold">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10 text-center">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl sm:text-4xl lg:text-6xl font-serif font-bold text-brand-900 mb-10 leading-tight">
          <span class="lang-id">{cta_banner.title_main.id} {cta_banner.title_accent.id}</span>
          <span class="lang-en">{cta_banner.title_main.en} {cta_banner.title_accent.en}</span>
        </h2>
        <div class="flex flex-col sm:flex-row justify-center gap-4 sm:gap-6">
          <a href="#contact" class="px-8 py-4 bg-brand-900 text-white font-black uppercase tracking-widest text-[10px] sm:text-xs rounded-xl shadow-2xl hover:bg-white hover:text-brand-900 transition-all">
            <span class="lang-id">{cta_banner.btn_primary.id}</span>
            <span class="lang-en">{cta_banner.btn_primary.en}</span>
          </a>
          <a href={`tel:${contact.info.phone.replace(/[^0-9]/g, '')}`} class="px-8 py-4 border border-brand-900 text-brand-900 font-black uppercase tracking-widest text-[10px] sm:text-xs rounded-xl hover:bg-brand-900 hover:text-white transition-all">
            <i class="fa-solid fa-phone mr-3"></i> <span class="lang-id">{cta_banner.btn_secondary.id}</span><span class="lang-en">{cta_banner.btn_secondary.en}</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact & Location -->
  <section id="contact" class="py-20 sm:py-32 bg-white relative">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-20 items-start">
        <div data-aos="fade-right">
          <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-[10px] mb-4 block lang-id">{contact.badge.id}</span>
          <span class="text-brand-gold font-black uppercase tracking-[0.3em] text-[10px] mb-4 block lang-en">{contact.badge.en}</span>
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-bold text-brand-900 leading-tight mb-8">
            <span class="lang-id">{contact.title_main.id} <span class="text-gradient-gold">{contact.title_accent.id}</span></span>
            <span class="lang-en">{contact.title_main.en} <span class="text-gradient-gold">{contact.title_accent.en}</span></span>
          </h2>

          <div class="space-y-8 mt-10">
            <div class="flex gap-5 group">
              <div class="w-12 h-12 rounded-xl bg-brand-50 flex items-center justify-center text-brand-gold group-hover:bg-brand-gold group-hover:text-white transition-all shadow-sm shrink-0">
                <i class="fa-solid fa-location-dot"></i>
              </div>
              <div>
                <h4 class="text-[9px] uppercase tracking-widest font-black text-slate-400 mb-1 lang-id">{contact.info.address_label.id}</h4>
                <h4 class="text-[9px] uppercase tracking-widest font-black text-slate-400 mb-1 lang-en">{contact.info.address_label.en}</h4>
                <p class="text-base sm:text-lg font-bold text-brand-900 leading-tight">{contact.info.address}</p>
              </div>
            </div>

            <div class="flex gap-5 group">
              <div class="w-12 h-12 rounded-xl bg-brand-50 flex items-center justify-center text-brand-gold group-hover:bg-brand-gold group-hover:text-white transition-all shadow-sm shrink-0">
                <i class="fa-solid fa-envelope-open-text"></i>
              </div>
              <div>
                <h4 class="text-[9px] uppercase tracking-widest font-black text-slate-400 mb-1 lang-id">{contact.info.email_label.id}</h4>
                <h4 class="text-[9px] uppercase tracking-widest font-black text-slate-400 mb-1 lang-en">{contact.info.email_label.en}</h4>
                <p class="text-base sm:text-lg font-bold text-brand-900 break-all">{contact.info.email}</p>
              </div>
            </div>
          </div>
        </div>

        <div class="relative" data-aos="fade-left">
          <form id="contactForm" class="relative glass-morphism p-6 sm:p-10 rounded-[2rem] shadow-premium border-white/20 bg-white/50 backdrop-blur-xl border">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
              <div>
                <label class="block text-[9px] uppercase tracking-widest font-black text-slate-500 mb-2 lang-id">{contact.form.name_label.id}</label>
                <label class="block text-[9px] uppercase tracking-widest font-black text-slate-500 mb-2 lang-en">{contact.form.name_label.en}</label>
